{% set date_option_mappings = {
    'Month': "DATEADD(MONTH, DATEDIFF(MONTH, DATE(0), `const_date`), DATE(0))",
    'Week': "DATEADD(week, DATEDIFF(week, DATE(4), `const_date`), DATE(4))"
} %}

