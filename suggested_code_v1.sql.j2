-- dynamic2
{% set dynamic2_mappings = {
    'Province': 'store_province',
    'Account Rep': 'h.`account_rep`',
    'Brand': '`product_brand`',
    'Store Location': "concat(h.store_storename, ' | ', h.store_city, ' | ', h.store_address, ' | ', h.store_postal_code)",
